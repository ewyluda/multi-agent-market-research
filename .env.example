# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROK_API_KEY=your_grok_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEWS_API_KEY=your_newsapi_key_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TAVILY_API_KEY=your_tavily_api_key_here

# LLM Configuration
LLM_PROVIDER=anthropic  # or 'openai' or 'xai'
LLM_MODEL=claude-3-5-sonnet-20241022  # or 'gpt-4-turbo'
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096

# Agent Configuration
AGENT_TIMEOUT=30
AGENT_MAX_RETRIES=2
PARALLEL_AGENTS=true
FUNDAMENTALS_LLM_ENABLED=true
MACRO_AGENT_ENABLED=true
OPTIONS_AGENT_ENABLED=true
ALERTS_ENABLED=true
SCHEDULER_ENABLED=true
SCHEDULER_MIN_INTERVAL=30
CATALYST_SCHEDULER_ENABLED=true
CATALYST_SOURCE=earnings
CATALYST_PRE_DAYS=1
CATALYST_POST_DAYS=1
CATALYST_SCAN_INTERVAL_MINUTES=60
PORTFOLIO_ACTIONS_ENABLED=true
MACRO_CATALYSTS_ENABLED=true
MACRO_CATALYST_PRE_DAYS=1
MACRO_CATALYST_DAY_ENABLED=true
MACRO_CATALYST_EVENT_TYPES=fomc,cpi,nfp
CALIBRATION_ENABLED=true
CALIBRATION_TIMEZONE=America/New_York
CALIBRATION_CRON_HOUR=17
CALIBRATION_CRON_MINUTE=30
SIGNAL_CONTRACT_V2_ENABLED=false
COT_PERSISTENCE_ENABLED=false
PORTFOLIO_OPTIMIZER_V2_ENABLED=false
CALIBRATION_ECONOMICS_ENABLED=false
ALERTS_V2_ENABLED=false
WATCHLIST_RANKING_ENABLED=false
UI_PM_DASHBOARD_ENABLED=false

# Tavily Configuration (AI-powered search for enhanced news & research)
TAVILY_ENABLED=true
TAVILY_NEWS_ENABLED=true
TAVILY_CONTEXT_ENABLED=true
TAVILY_MAX_RESULTS=20
TAVILY_NEWS_DAYS=7
TAVILY_SEARCH_DEPTH=advanced  # basic or advanced
# Scheduled-run only rollout overrides (Stage A/B safe enablement)
SCHEDULED_SIGNAL_CONTRACT_V2_ENABLED=false
SCHEDULED_CALIBRATION_ECONOMICS_ENABLED=false
SCHEDULED_PORTFOLIO_OPTIMIZER_V2_ENABLED=false
SCHEDULED_ALERTS_V2_ENABLED=false

# Database
DATABASE_PATH=market_research.db

# Data Sources
YFINANCE_TIMEOUT=10
NEWS_LOOKBACK_DAYS=7
MAX_NEWS_ARTICLES=20
TWITTER_MAX_RESULTS=50
TWITTER_MIN_ENGAGEMENT=0

# Technical Analysis
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BB_PERIOD=20
BB_STD=2

# Alpha Vantage Rate Limiting
AV_RATE_LIMIT_PER_MINUTE=5
AV_RATE_LIMIT_PER_DAY=25

# Tavily API (optional but recommended - replaces NewsAPI as primary news source)
# Get your API key at: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# Cache TTL (seconds)
CACHE_TTL_PRICE=300
CACHE_TTL_NEWS=3600
CACHE_TTL_FUNDAMENTALS=86400

# SEC EDGAR
SEC_EDGAR_USER_AGENT=MarketResearch/1.0 (research@example.com)

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO

# Docker Configuration
FRONTEND_PORT=3000
